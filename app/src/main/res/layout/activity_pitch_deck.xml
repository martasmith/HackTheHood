<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PitchDeckActivity">


    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:onClick="getStartedClicked"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="133dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnBusinessForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Form"
        android:onClick="businessFormBtnClicked"
        android:layout_alignTop="@+id/btnGetStarted"
        android:layout_marginTop="75dp"
        android:layout_alignRight="@+id/btnGetStarted"
        android:layout_alignEnd="@+id/btnGetStarted"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HackTheHood"
        android:gravity="center"
        android:textSize="25sp"
        android:fontFamily="san-serif-light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnGetStarted"
        android:layout_alignEnd="@+id/btnGetStarted" />

</RelativeLayout>
