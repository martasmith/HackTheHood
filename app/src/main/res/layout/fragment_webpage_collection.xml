<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.codepath.hackthehood.fragments.forms.WebsitePageFragment">

        <LinearLayout
            android:id="@+id/llEntry1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <EditText
                android:id="@+id/etPageText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="Enter web page text here.."
                android:layout_weight="0.9"
                android:inputType="textMultiLine"
                android:lines="5">
                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/ivMic1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="0.1"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_mic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEntry2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <EditText
                android:id="@+id/etDesignerNotes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="Notes to designer about this page.."
                android:inputType="textMultiLine"
                android:layout_weight="0.9"
                android:lines="5"></EditText>

            <ImageView
                android:id="@+id/ivMic2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="0.1"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_mic" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvAssetCollection"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etDesignerNotes"
            android:layout_marginTop="15dp"
            android:text="Take photos or upload photos:" />

        <LinearLayout
            android:id="@+id/llImgUpload"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFile1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="15dp"
                android:src="@drawable/upload_more" />

            <ImageView
                android:id="@+id/imgFile2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="15dp"
                android:src="@drawable/upload_more" />

            <ImageView
                android:id="@+id/imgFile3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="15dp"
                android:src="@drawable/upload_more" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAddSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Add Site Content" />

    </LinearLayout>

</ScrollView>