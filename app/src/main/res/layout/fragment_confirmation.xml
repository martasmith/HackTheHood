<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codepath.hackthehood.fragments.ConfirmationFragment">


    <TextView
        android:id="@+id/tvConfComplete"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="@string/tv_conf_complete" />

    <TextView
        android:id="@+id/tvConfStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvConfComplete"
        android:text="@string/tv_conf_status" />

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:src="@drawable/ic_approved"
        android:layout_below="@+id/tvConfStatus"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnToAssets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_to_assets"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tvConfStatus"
        android:layout_alignLeft="@+id/ivStatus"
        android:layout_alignStart="@+id/ivStatus" />


</RelativeLayout>
