<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.hackthehood" >

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- ActiveAndroid definitions -->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="HackTheHood.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <!-- Activities -->
        <activity
            android:name=".activities.PitchDeckActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.BusinessFormActivity"
            android:label="@string/title_activity_business_form" >
        </activity>
        <activity
            android:name=".activities.AssetCollectionActivity"
            android:label="@string/title_activity_asset_collection" >
        </activity>
        <activity
            android:name=".activities.WebpageCollectionActivity"
            android:label="@string/title_activity_webpage_collection" >
        </activity>
    </application>

</manifest>
